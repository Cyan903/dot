#!/usr/bin/env bash

set -e

URL="http://127.0.0.1:8765/"
DECK="Vocabulary::Mining"
MAX="35"

ankic() {
    curl -s --request GET --url "$URL" --header 'Content-Type: application/json' \
        --data "$(jq -n \
            --arg deck "$DECK" \
            --arg query "$1" \
            '{
                action: "findNotes",
                version: 6,
                params: {
                    query: "\"deck:\($deck)\" \($query)"
                }
            }')" | jq ".result | length"
}

# Get new/added cards
new=$(ankic "is:new")
added=$(ankic "added:1")

# Get color
color="green"

# Check for valid cards
[[ -z "$new" || -z "$added" ]] && exit 1
[[ "$added" -lt "$MAX" ]] && color="red"

# Print as JSON
echo "{\"text\": \"  ${new}x (<span color='$color'>+$added</span>)\", \"tooltip\": \"<span weight='bold'>New:</span> ${new}x ⏽ <span weight='bold'>Added:</span> ${added}x\"}"

